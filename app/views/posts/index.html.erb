<h1> index page</h1>



<table class="table table-hover">
	<thead>
		<tr>
			<th>
				#
			</th>
			<th>
				Date
			</th>
			<th>
				User
			</th>
			<th>
				Rationale
			</th>
		</tr>
	</thead>
	<tbody>    

	  <% @posts.each do |post| %>

		<tr>
			<td>
				<%= post.date %>
			</td>
			<td>
				<%= post.id %>
			</td>
			<td>
				<%= post.user.email %>
			</td>
			<td>
				<%= truncate(post.rationale) %>
			</td>
		</tr>
		<% end %>

		</tbody>
	</table>