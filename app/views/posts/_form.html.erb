<%= form_for @post, class:"form-horizontal" do |f| %>
  <% @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Overtime App Notification", sticky: false) %>
    <% end %>

<div class="form-group">
  <%= f.label :date, class:"col-sm-2 control-label" %>
  <%= f.date_field :date, class:"form-control", :value => Time.now.strftime("%Y-%m-%d") %>
</div>
<div class="form-group">
  <%= f.label :rationale, class:"col-sm-2 control-label" %>
  <%= f.text_area :rationale, class:"form-control", placeholder: "placeholder text" %>
</div>

<div class="form-group">
  <div class="row">
   <div class="col-md-3">
   <p>Post status</p>
   </div>
  <div class="col-md-3">
    <%= f.radio_button :status, 'submitted' %>
    <%= f.label :status, 'Submitted' %>
  </div>
  <div class="col-md-3">
  <%= f.radio_button :status, 'approved' %> 
  <%= f.label :status, 'Approved' %>
  </div>
  <div class="col-md-3">
  <%= f.radio_button :status, 'rejected' %>
  <%= f.label :status, 'Rejected' %>
  </div>
  
  
  </div>
</div>

<div class="form-group">
  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>
</div>
<% end %>
<hr>
